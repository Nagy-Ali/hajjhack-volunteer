<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:layout_marginBottom="@dimen/fab_margin"
    android:padding="@dimen/fab_margin"
    android:elevation="1dp"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/new_req_list_item_image"
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/new_req_list_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:text="Health"/>

    <TextView
        android:id="@+id/new_req_list_item_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/new_req_list_item_title"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:text="subtitle"/>

    <Button
        android:id="@+id/new_req_list_item_action1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:paddingLeft="0dp"
        android:outlineProvider="none"
        android:text="Accept"/>

    <Button
        android:id="@+id/new_req_list_item_action2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/new_req_list_item_action1"
        android:layout_alignParentBottom="true"
        android:paddingLeft="0dp"
        android:background="@android:color/white"
        android:outlineProvider="none"
        android:text="Details"/>

</RelativeLayout>